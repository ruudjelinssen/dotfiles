#!/bin/sh
pkill sxhkd 2> /dev/null; sxhkd &
pkill dunst 2> /dev/null; dunst &
pkill compton 2> /dev/null; compton --config $HOME/.config/compton/compton.conf &
pkill nextcloud 2> /dev/null; nextcloud --background &

# polybar
$HOME/.config/polybar/launch.sh

bspc config border_width         2
bspc config window_gap           5
bspc config top_padding          0

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config normal_border_color     "#3c3836"
bspc config focused_border_color    "#665c54"
bspc config presel_feedback_color   "#7c6f64"

# ============ Monitors ============
if [[ -x $HOME/.config/bspwm/monitors ]]; then
    source $HOME/.config/bspwm/monitors
else
    bspc monitor -d 1 2 3 4 5 6 7 8 9 0
fi

# ============ Rules ============
# bspc rule -a Steam state=floating follow=on
# bspc rule -a Chromium desktop='^2'
# bspc rule -a mplayer2 state=floating
# bspc rule -a Kupfer.py focus=on
# bspc rule -a Screenkey manage=off
